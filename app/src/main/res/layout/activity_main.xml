<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etxtcodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="código"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etxtnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtcodigo" />

    <EditText
        android:id="@+id/etxtapellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtnombre" />

    <EditText
        android:id="@+id/etxttelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtapellido" />

    <Button
        android:id="@+id/btnalta"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ALTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxttelefono" />

    <Button
        android:id="@+id/btnbuscar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="BUSCAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnalta" />

    <Button
        android:id="@+id/btnmodificar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MODIFICAR"
        app:layout_constraintEnd_toEndOf="@+id/btnalta"
        app:layout_constraintStart_toStartOf="@+id/btnalta"
        app:layout_constraintTop_toBottomOf="@+id/btnalta" />

    <Button
        android:id="@+id/btneliminar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ELIMINAR"
        app:layout_constraintEnd_toEndOf="@+id/btnbuscar"
        app:layout_constraintStart_toStartOf="@+id/btnbuscar"
        app:layout_constraintTop_toBottomOf="@+id/btnbuscar" />

    <Button
        android:id="@+id/btnbase"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VER BASE"
        app:layout_constraintEnd_toEndOf="@+id/btnmodificar"
        app:layout_constraintStart_toStartOf="@+id/btnmodificar"
        app:layout_constraintTop_toBottomOf="@+id/btnmodificar" />

    <Button
        android:id="@+id/btncontacto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CONTACTO"
        app:layout_constraintEnd_toEndOf="@+id/btneliminar"
        app:layout_constraintStart_toStartOf="@+id/btneliminar"
        app:layout_constraintTop_toBottomOf="@+id/btneliminar" />
</androidx.constraintlayout.widget.ConstraintLayout>